<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".PersonDetail">

    <data>
        <import type="android.view.View"/>
        <variable
            name="viewModel"
            type="com.example.randomperson.viewmodel.PersonDetailViewModel" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="match_parent">


        <androidx.appcompat.widget.Toolbar
            android:id="@+id/my_toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            android:elevation="4dp"
            android:theme="@style/ThemeOverlay.AppCompat.ActionBar"
            app:popupTheme="@style/ThemeOverlay.AppCompat.Light"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/button2"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:backgroundTint="@color/design_default_color_error"
                android:layout_height="wrap_content"
                android:enabled="@{!viewModel.isNew}"
                android:text="Delete" />

            <Button
                android:id="@+id/button"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:backgroundTint="#2dac36"
                android:layout_height="wrap_content"
                android:onClick="@{() -> viewModel.savePerson()}"
                android:text="Save" />
        </LinearLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                tools:layout_editor_absoluteX="1dp"
                tools:layout_editor_absoluteY="1dp">


                <TextView
                    android:id="@+id/textView9"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="#ff0000"
                    android:textAlignment="center"
                    android:visibility="@{viewModel.showNotFound ? View.VISIBLE : View.GONE}"
                    android:text="Cannt get data!" />

                <TextView
                    android:id="@+id/textView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="14dp"
                    android:layout_margin="10dp"
                    android:text="Name" />

                <EditText
                    android:id="@+id/editTextText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="14dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginLeft="10dp"
                    android:ems="10"
                    android:text="@{viewModel.person.name}"
                    android:enabled="@{viewModel.editable}"
                    android:inputType="text"/>

                <TextView
                    android:id="@+id/textView2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="14dp"
                    android:layout_margin="10dp"
                    android:text="Age" />

                <EditText
                    android:id="@+id/editTextNumberSigned"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="14dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginLeft="10dp"
                    android:ems="10"
                    android:text="@{viewModel.person.age}"
                    android:enabled="@{viewModel.editable}"
                    android:inputType="numberSigned" />

                <TextView
                    android:id="@+id/textView3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="14dp"
                    android:layout_margin="10dp"
                    android:text="Job" />

                <EditText
                    android:id="@+id/editTextText3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="14dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginLeft="10dp"
                    android:ems="10"
                    android:text="@{viewModel.person.job}"
                    android:enabled="@{viewModel.editable}"
                    android:inputType="text" />

                <TextView
                    android:id="@+id/textView4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="14dp"
                    android:layout_margin="10dp"
                    android:text="Email" />

                <EditText
                    android:id="@+id/editTextTextEmailAddress"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="14dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginLeft="10dp"
                    android:ems="10"
                    android:text="@{viewModel.person.email}"
                    android:enabled="@{viewModel.editable}"
                    android:inputType="textEmailAddress" />

                <TextView
                    android:id="@+id/textView5"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="14dp"
                    android:layout_margin="10dp"
                    android:text="Gender" />

                <EditText
                    android:id="@+id/editTextText4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="14dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginLeft="10dp"
                    android:ems="10"
                    android:text="@{viewModel.person.gender}"
                    android:enabled="@{viewModel.editable}"
                    android:inputType="text" />

                <TextView
                    android:id="@+id/textView6"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="14dp"
                    android:layout_margin="10dp"
                    android:text="Username" />

                <EditText
                    android:id="@+id/editTextText5"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="14dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginLeft="10dp"
                    android:ems="10"
                    android:text="@{viewModel.person.username}"
                    android:enabled="@{viewModel.editable}"
                    android:inputType="text" />

                <com.google.android.material.divider.MaterialDivider
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp"/>

                <TextView
                    android:id="@+id/textView7"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="14dp"
                    android:layout_margin="10dp"
                    android:text="Street" />

                <EditText
                    android:id="@+id/editTextText6"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="14dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginLeft="10dp"
                    android:ems="10"
                    android:text="@{viewModel.person.address.streetAddress}"
                    android:enabled="@{viewModel.editable}"
                    android:inputType="text" />

                <TextView
                    android:id="@+id/textView8"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="14dp"
                    android:layout_margin="10dp"
                    android:text="City" />

                <EditText
                    android:id="@+id/editTextText7"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="14dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginLeft="10dp"
                    android:ems="10"
                    android:text="@{viewModel.person.address.city}"
                    android:enabled="@{viewModel.editable}"
                    android:inputType="text"/>

                <TextView
                    android:id="@+id/textView10"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="14dp"
                    android:layout_margin="10dp"
                    android:text="State" />

                <EditText
                    android:id="@+id/editTextText8"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="14dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginLeft="10dp"
                    android:ems="10"
                    android:text="@{viewModel.person.address.state}"
                    android:enabled="@{viewModel.editable}"
                    android:inputType="text"/>

                <TextView
                    android:id="@+id/textView11"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="14dp"
                    android:layout_margin="10dp"
                    android:text="Country" />

                <EditText
                    android:id="@+id/editTextText9"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:textSize="14dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginLeft="10dp"
                    android:text="@{viewModel.person.address.country}"
                    android:enabled="@{viewModel.editable}"
                    android:inputType="text" />

                <TextView
                    android:id="@+id/textView12"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="14dp"
                    android:layout_margin="10dp"
                    android:text="ZIP" />

                <EditText
                    android:id="@+id/editTextText10"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="14dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginLeft="10dp"
                    android:ems="10"
                    android:text="@{viewModel.person.address.zip}"
                    android:enabled="@{viewModel.editable}"
                    android:inputType="text" />

            </LinearLayout>

        </ScrollView>

    </LinearLayout>


</layout>